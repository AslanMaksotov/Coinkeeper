<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coinkeeper.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/coins"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >
        
        <activity
            android:name="com.coinkeeper.activity.MainActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar" 
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.coinkeeper.activity.GainActivity">
        </activity>
        <activity 
            android:name="com.coinkeeper.activity.CostsActivity">
        </activity>
        <activity 
            android:name="com.coinkeeper.activity.BudgetActivity">
        </activity>
        <activity 
            android:name="com.coinkeeper.activity.CalendarActivity">
        </activity>
        <activity 
            android:name="com.coinkeeper.activity.NotesActivity">
        </activity>
        <activity 
            android:name="com.coinkeeper.activity.SettingsActivity">
        </activity>
        <activity 
            android:name="com.coinkeeper.activity.StatisticsActivity">
        </activity>
        <activity 
            android:name="com.coinkeeper.activity.AddGainActivity"
            android:windowSoftInputMode="stateHidden"
            >
        </activity>
         <activity 
            android:name="com.coinkeeper.activity.EditGainActivity"
            android:theme="@style/AppTheme" 
            android:windowSoftInputMode="stateHidden"
            >
        </activity>
        <activity 
            android:name="com.coinkeeper.activity.AddCostsActivity"
            android:windowSoftInputMode="stateHidden"
            >
        </activity>
         <activity 
            android:name="com.coinkeeper.activity.EditCostsActivity"
            android:theme="@style/AppTheme" 
            android:windowSoftInputMode="stateHidden"
            >
        </activity>
        <activity 
            android:name="com.coinkeeper.activity.ShowIconsActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar" 
            >
        </activity>
    </application>

</manifest>
